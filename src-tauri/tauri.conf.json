{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gitaurora",
  "version": "0.1.15",
  "identifier": "com.gitaurora.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "gitaurora",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU4ODE5QjMxNjU3Qzc0NzYKUldSMmRIeGxNWnVCNkZwNmlOSVlwRVk3TXM1bUxEMjRXVWVlYWZpK1gxcnBGMkFRT0NPUHlib1kK",
      "dialog": true,
      "endpoints": [
        "https://github.com/monsieursam/gitaurora-release/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}