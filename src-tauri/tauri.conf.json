{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "gitaurora",
	"version": "0.1.55",
	"identifier": "com.gitaurora.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "GitAurora",
				"width": 900,
				"height": 600,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"plugins": {
		"fs": {
			"requireLiteralLeadingDot": false
		},
		"shell": {
			"open": true
		},
		"updater": {
			"active": true,
			"dialog": true,
			"endpoints": [
				"https://github.com/croissantlabs/gitaurora-release/releases/latest/download/latest.json"
			]
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"createUpdaterArtifacts": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
